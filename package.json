{
	"name": "pwitter",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "npm-run-all clean transpile",
		"start": "node ./dist-server/bin/www",
		"dev": "NODE_ENV=development npm-run-all build start",
		"transpile": "babel ./server --out-dir dist-server",
		"clean": "rimraf dist-server",
		"watch": "nodemon --scripts-prepend-node-path"
	},
	"dependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/preset-env": "^7.8.7",
		"babel-core": "7.0.0-bridge.0",
		"babel-loader": "^8.0.0-beta.6",
		"bcryptjs": "^2.4.3",
		"cookie-parser": "~1.4.4",
		"debug": "~2.6.9",
		"dotenv": "^8.2.0",
		"express": "~4.16.1",
		"express-jwt": "^5.3.1",
		"http-errors": "~1.6.3",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.3",
		"morgan": "~1.9.1",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-es2015": "^6.24.1"
	},
	"nodemonConfig": {
		"exec": "npm run dev",
		"watch": [
			"server/*",
			"public/*"
		],
		"ignore": [
			"**/__tests__/**",
			"*.test.js",
			"*.spec.js"
		]
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"esmodules": true
					}
				}
			]
		]
	}
}
